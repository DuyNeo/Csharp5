@model IEnumerable<ASM.Models.MonAn>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Trang chủ</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm sản phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenMon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DanhMuc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenMon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
         
            <td>
                <img src="~/Image/@item.Hinh" width="50" height=" 50" />
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.MaMon">Sửa</a> 
                <a asp-action="Details"class="btn btn-success" asp-route-id="@item.MaMon">Chi tiết</a> 
                <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.MaMon">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
