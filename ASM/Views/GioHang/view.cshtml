@{
}
@model DonHang

@if (Model != null )
{
    <link href="~/css/cart.css" rel="stylesheet" />
    <div class="cart_section">
        <div class="container-fluid">
            <div class="row">





                <div class="col-lg-12 offset-lg-1">

                    <div class="cart_container">

                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">Well done!</h4>
                            <p>Aww yeah, you successfully read this important alert message. This example text is going to run a bit longer so that you can see how spacing within an alert works with this kind of content.</p>
                            <hr>
                            <p class="mb-0">@Html.DisplayFor( m => m.TrangthaiDonhang)</p>
                        </div>



                        <div class="cart_title">Thông tin người nhận </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Tên người nhận</label>
                                <input type="text" class="form-control" value="@ViewData["tenKhach"]">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Địa chỉ</label>
                                <input type="text" class="form-control" value="@ViewData["address"]">
                            </div>

                        </div>
                        <div class="cart_title">Hoá đơn: <small> (Bạn đã đặt @Model.DonhangChitiets.Count sản phẩm) </small></div>
                        <div class="cart_items">
                            <ul class="cart_list">
                                @foreach (var item in Model.DonhangChitiets)
                                {
                                    <li class="cart_item clearfix">
                                        <div class="cart_item_image"><img src="~/Image/@item.MonAn.Hinh" alt=""></div>
                                        <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                            <div class="cart_item_name cart_info_col">
                                                <div class="cart_item_title">Tên</div>
                                                <div style="width: 233px" class="cart_item_text">@item.MonAn.TenMon</div>
                                            </div>

                                            <div class="cart_item_quantity cart_info_col">
                                                <div class="cart_item_title">Số lượng</div>
                                                <div class="cart_item_text">@item.Soluong</div>
                                            </div>
                                            <div class="cart_item_price cart_info_col">
                                                <div class="cart_item_title">Giá</div>
                                                <div class="cart_item_text">₹@item.MonAn.Gia</div>
                                            </div>
                                            <div class="cart_item_total cart_info_col">
                                                <div class="cart_item_title">Thành tiền</div>
                                                <div class="cart_item_text">
                                                    @{
                                                        var t = item.Soluong * item.MonAn.Gia;
                                                    }
                                                    <span>@t</span>
                                                </div>
                                            </div>

                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="order_total">
                            <div class="order_total_content text-md-right">
                                <div class="order_total_title">Tổng giá:</div>
                                <div class="order_total_amount">@Model.Tongtien</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div style="margin-top:120px" class="cart_section">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12 offset-lg-1">

                    <div class="cart_container">
                        <h1 class="alert alert-info">Giỏ hàng trống</h1>

                    </div>
                </div>

            </div>

        </div>

    </div>


}
