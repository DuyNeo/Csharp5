@model IEnumerable<ASM.Models.DanhMuc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Trang chủ</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm danh mục mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDanhMuc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMuc)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-warning" asp-route-id="@item.Id">Sửa</a> 
                <a asp-action="Details"class="btn btn-success" asp-route-id="@item.Id">Chí tiết</a> 
                <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
