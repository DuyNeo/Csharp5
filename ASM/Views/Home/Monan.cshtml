@model List<MonAn>
<html lang="en">

<body>

    <section class="category">

        <h1 class="title"> our <span>category</span> <a href="#">view all >></a> </h1>

        <div class="box-container">

            <a href="#" class="box">
                <img src="~/Image/image/cat-1.png" alt="">
                <h3>fresh fruits</h3>
            </a>

            <a href="#" class="box">
                <img src="~/Image/image/cat-2.png" alt="">
                <h3>vegetables</h3>
            </a>

            <a href="#" class="box">
                <img src="~/Image/image/cat-3.png" alt="">
                <h3>organic spices</h3>
            </a>

            <a href="#" class="box">
                <img src="~/Image/image/cat-4.png" alt="">
                <h3>fresh meat</h3>
            </a>

            <a href="#" class="box">
                <img src="~/Image/image/cat-5.png" alt="">
                <h3>organic wheat</h3>
            </a>

        </div>

    </section>
    <section class="products">

        <h1 class="title"> our <span>products</span> <a href="#">view all >></a> </h1>

        <div class="box-container">
            @foreach (var item in Model)
            {
                <div class="box">
                    <div class="icons">
                            <a data-id="@item.MaMon" class="fas fa-shopping-cart btnAddCart">
                            </a>

                        <a href="#" class="fas fa-heart"></a>
                        <a href="#" class="fas fa-eye"></a>
                    </div>
                    <div class="image">
                        <img  src="~/Image/@item.Hinh" alt="">
                    </div>
                    <div class="content">
                        <h3>@item.TenMon</h3>
                        <div class="price">$@item.Gia</div>
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    <script type="text/javascript">

    </script>
</body>
</html>